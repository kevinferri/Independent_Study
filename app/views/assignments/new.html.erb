<div class="jumbotron text-center">
  <h2>Post An Assignment</h2>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <%= form_for(@assignment) do |f| %>



        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
        <br>
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
        <br>
        <%= f.label :class_name %>
        <%= f.text_field :class_name, class: "form-control" %>
        <br>
        <%= f.label :class_code %>
        <%= f.text_field :class_code, class: "form-control" %>
        <br>
        <%= f.submit "Post Assignment", class: "btn btn-lg btn-primary" %>
      <% end %>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>

